<h3 class="row">
  <%= t ".all_lesson" %>
</h3>
<%= render @lesson %>
<div class="row">
  <% @lesson.results.each_with_index do |result, index| %>
    <div class="col-md-4 question" >
      <%= index + 1 %>.&nbsp
      <%= result.word.content %>  
    </div class= "col-md-8">
      <div>
      <% if result.correct? %>
        <div class="answer-true">
          <%= result.answer.content %>
        </div>
      <% else %>
        <div class="answer-fail"><%= t ".false_result" %></div>
      <% end %>
    <% end %>
  </div>
</div>
