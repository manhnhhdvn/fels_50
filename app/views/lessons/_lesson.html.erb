<div id="lesson-container", class="row">
  <div class="col-md-2">
    <%= lesson.category.name %>
  </div>
  <div class="col-md-6">    
    <div class="col-md-2">
      <%= lesson.results.answered.count %>
      <%= t ".question_done" %>
    </div>
    <div class="col-md-4">
      <%= lesson.created_at.to_formatted_s :short %>
    </div>
  </div>
  <% unless lesson.finished? %>
    <div class="col-md-4">
      <button class="btn btn-default">
        <%= t ".take_lesson" %>
      </button>
    </div>
  <% else %>
    <div class="col-md-4">
      <%= lesson.results.correct_answer.count %>
      <%= t ".slash" %>
      <%= lesson.results.count %>
    </div>
  <% end %>
</div>
<hr/>
