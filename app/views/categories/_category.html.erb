<div class="row">
  <div class="col-md-4">
    <%= category.name %>
  </div>
  <div class="col-md-8">
    <%= category.description %>
    <blockquote>
      <% category.words.each do |word| %>
        <%= word.content %>
      <% end %>
    </blockquote>
    <%= form_for [category, category.lessons.build] do |f| %>
      <%= f.submit t(".btn_take"), class: "btn btn-primary col-md-2" %>
    <% end %>
  </div>
</div>
