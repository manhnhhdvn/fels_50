<div class="row">
  <div class="col-md-4 row">
    <section class="user_info center jumbotron">
      <%= link_to gravatar_for(current_user), current_user %>
      <h3><%= current_user.name %></h3>
    </section>    
  </div>
  <div class="col-md-8 container-fluid">
    <div class="row", id="user-menu">
      <form>
        <button type="submit" class="btn btn-default col-md-4">
          <%= t ".btn_words" %>
        </button>
        <button type="submit" class="btn btn-default col-md-4">
          <%= t ".btn_lessons" %>
        </button>
      </form>
    </div>
    <hr/>
    <div class="row", id="user-word-list">
      <ul class="container-fluid">
        <%= render @activities %>
        <%= will_paginate @activities %>
      </ul>
    </div>
  </div>
</div>
